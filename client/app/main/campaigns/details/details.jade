extends ./../../main.jade
block content
  .row
    .col-lg-12.list-page.paddingValues
      .col-lg-2
      .col-lg-8
        .col-lg-5
          img.fit(alt='{{campaign.name}}', src='{{campaign.imageUrl}}',width=300, class='borderImage')
        .col-lg-7.centralText
          h1 {{campaign.name}}
          h4 por {{user.name}}

          p {{campaign.info}}
          .row
            .col-lg-7.paddingTop
              .progress.progressBarContainer
                .progress-bar.campaignProgressBar(role='progressbar', aria-valuenow='60', aria-valuemin='0', aria-valuemax='100', style='width: 40%;')
                    span.sr-only 40% Complete
            .col-lg-5
              p
              .colorBrown RECAUDADO &nbsp; &nbsp;
              .colorPink $00,00 de $00,00
          .row
            .col-lg-8.details-buttons
                button.donateButton.btn(type='button',ng-click="open(campaign._id)")| DONA!
                button.reportButton.btn(type='button',ng-click="go('/campaigns/reports')")| VER REPORTE
      .col-lg-2
          img.fit(alt='{{campaign.tipo}}', src='/assets/images/tipo{{campaign.campaignType}}.png', width=100)
     .col-lg-12.backgroundWhite
      .col-lg-1
      .col-lg-10
        .col-lg-1
        .col-lg-5.greyBox
          h2 ###
          h4 Donaciones
        .col-lg-5.greyBox
          h2 {{expire}}
          h4 para terminar la campa√±a
        .col-lg-1

      .col-lg-1

    .col-lg-12.list-page
        .col-lg-1
          h3.colorBrown DIRECCION
    .col-lg-12
        ui-gmap-google-map(center='map.center', zoom='map.zoom', options='map.options')
          ui-gmap-marker(coords='campaign.coords',idkey='campaign._id',events='marker.events')
