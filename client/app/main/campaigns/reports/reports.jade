      h2.colorWhiteTitle Estadisticas Mensuales
      .col-lg-6
        .h4.colorWhiteBig Cantidad de Donaciones

        .highchart(id='chart1', config='chartConfig')
        h4 &nbsp;
      .col-lg-6
        .h4.colorWhiteBig Cantidad Recaudada

        .highchart(id='chart2', config='chartConfig2')
