header#banner.hero-unit
  .container
    .row(ng-repeat="campaign in campaigns")
      .col-md-9
        | {{campaign.name}}
      .col-md-3
        .col-md-1
        .col-md-7
          img.fit(alt='{{campaign.name}}', src='{{campaign.imageUrl}}')
          .progress
            .progress-bar(role='progressbar', aria-valuenow='60', aria-valuemin='0', aria-valuemax='100', style='width: 10%;')
        .col-md-3
          | {{campaign.currentAmount | currency}} de {{campaign.totalAmount | currency}}
        .col-md-1


        




