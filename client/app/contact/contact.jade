div(ng-include='"components/navbar/navbar.html"')
.container
  .row
    .col-sm-12
      h1 Contact Us
      h2 {{ message }}
    .row
      .col-sm-6
        form.form(name='form', ng-submit='contact(form)', novalidate='')
          .form-group.col-sm-12
            input.form-control(type='text', name='fullname', ng-model='contact.fullname', placeholder='Nombre y Apellido / Razón Social')
          .form-group.col-sm-12
            input.form-control(type='text', name='type', ng-model='contact.type', placeholder='Tipo de Entidad')
          .form-group.col-sm-12
            input.form-control(type='text', name='email', ng-model='contact.email', placeholder='Email')
          .form-group.col-sm-12
            input.form-control(type='text', name='phone', ng-model='contact.phone', placeholder='Teléfono')
          .form-group.col-sm-12
            input.form-control(type='text', name='link', ng-model='contact.link', placeholder='Link')
          .form-group.col-sm-12
            textarea.form-control(rows='3', resize='none', name='description', ng-model='contact.description', placeholder='Descripción')

          div
            button.btn.btn-primary.btn-lg.pull-right(type='submit')
              span Enviar

      .col-sm-6
        #drop-zone.upload-drop-zone
          | Just drag and drop files here
          img.hidden(src="")

  hr
